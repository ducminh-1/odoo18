<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_ethnicity_view_form" model="ir.ui.view">
        <field name="name">hr.ethnicity.form</field>
        <field name="model">hr.ethnicity</field>
        <field name="arch" type="xml">
            <form string="Ethnicity">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_ethnicity_view_tree" model="ir.ui.view">
        <field name="name">hr.ethnicity.tree</field>
        <field name="model">hr.ethnicity</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="country_id" />
            </list>
        </field>
    </record>

    <record id="hr_ethnicity_action" model="ir.actions.act_window">
        <field name="name">Ethnicity</field>
        <field name="res_model">hr.ethnicity</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem
        id="hr_ethnicity_menu"
        name="Ethnicity"
        action="hr_ethnicity_action"
        parent="hr.menu_config_employee"
        sequence="21"
        groups="hr.group_hr_manager"
    />
</odoo>
