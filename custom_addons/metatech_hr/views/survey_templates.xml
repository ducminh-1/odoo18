<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="certification_report_view_general_inherit" inherit_id="survey.certification_report_view_general">
        <xpath expr="//div[@id='o_survey_certification']" position="attributes">
            <attribute name="t-attf-class" add="certification-wrapper-custom" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('certification-seal')]" position="attributes">
            <attribute name="class" add="certification-seal-red" remove="certification-seal" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('certification')]" position="attributes">
            <attribute name="class" add="certification-font-custom" separator=" "/>
        </xpath>
        <xpath expr="//span[hasclass('user-name')]" position="attributes">
            <attribute name="class" add="user-name-font-custom" remove="user-name" separator=" "/>
        </xpath>
        <xpath expr="//span[hasclass('certification-name')]" position="attributes">
            <attribute name="class" add="certification-name-bold" remove="certification-name" separator=" "/>
        </xpath>
    </template>
</odoo>
