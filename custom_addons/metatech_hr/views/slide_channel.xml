<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="slide_channel_view_form_inherit" model="ir.ui.view">
        <field name="name">slide.channel.view.form.inherit</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form" />
        <field name="arch" type="xml">
            <xpath expr="//page//group/field[@name='website_id']" position="after">
                <field name="allowed_department_ids" widget="many2many_tags"/>
                <field name="job_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//page//field//field[@name='is_preview']" position="after">
                <field name="date_published"/>
            </xpath>
        </field>
    </record>


    <record id="slide_slide_view_form_inherit" model="ir.ui.view">
        <field name="name">slide.slide.view.form.inherit</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides.view_slide_slide_form" />
        <field name="arch" type="xml">
            <xpath expr="//page//group//group/field[@name='image_binary_content']" position="after">
               <field name="prerequisite_slide_ids" widget="many2many_tags"/>
                <field name="slide_complete"/>
            </xpath>
        </field>
    </record>
<!-- View tree -->
    <record id="slide_channel_view_tree_inherit" model="ir.ui.view">
        <field name="name">slide.channel.view.tree.inherit</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.slide_channel_view_tree" />
        <field name="arch" type="xml">
            <field name="visibility" position="after">
                <field name="create_date" optional="show"/>
            </field>
        </field>
    </record>
<!-- View Tree Quizzes -->
    <record id="slide_question_view_tree_report_inherit" model="ir.ui.view">
        <field name="name">slide.question.view.tree.report.inherit</field>
        <field name="model">slide.question</field>
        <field name="inherit_id" ref="website_slides.slide_question_view_tree_report" />
        <field name="arch" type="xml">
            <field name="done_count" position="after">
                <field name="text_value" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_slide_channel_partner_pivot_inherit" model="ir.ui.view">
        <field name="name">slide.channel.partner.pivot.inherit</field>
        <field name="model">slide.channel.partner</field>
        <field name="inherit_id" ref="website_slides.slide_channel_partner_view_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//pivot" position="inside">
                <field name="assigned_date" type="row"/>
                <field name="completion_date" type="row"/>
            </xpath>
        </field>
    </record>

</odoo>
