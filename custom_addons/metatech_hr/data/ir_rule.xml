<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_slide_channel_department" model="ir.rule">
        <field name="name">Slide Channel by Department</field>
        <field name="model_id" ref="metatech_hr.model_slide_channel"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[
            '&amp;',
            ('job_ids','in', user.employee_ids.job_id.ids),
            ('allowed_department_ids','in', user.employee_ids.department_id.ids)]</field>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
    </record>
</odoo>