<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mautic_segment_form" model="ir.ui.view">
        <field name="name">mautic.segment.form</field>
        <field name="model">mautic.segment</field>
        <field name="arch" type="xml">
            <form string="Mautic Segments">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="segment_alias" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_mautic_segment_tree" model="ir.ui.view">
        <field name="name">mautic.segment.tree</field>
        <field name="model">mautic.segment</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <list delete="0" edit="false">
                <field name="name" />
                <field name="segment_alias" />
            </list>
        </field>
    </record>
    <record id="action_open_mautic_segment" model="ir.actions.act_window">
        <field name="name">Mautic Segments</field>
        <field name="res_model">mautic.segment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="view_mautic_segment_tree" />
        <field name="view_mode">list,form</field>
    </record>
</odoo>
