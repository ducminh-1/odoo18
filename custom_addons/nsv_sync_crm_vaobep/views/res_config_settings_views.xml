<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div
                    class="app_settings_block"
                    data-string="guarantee_register"
                    string="Guarantee Register"
                    data-key="base"
                    groups="sales_team.group_sale_manager"
                >
                    <block title="Gurantee Register Notification">
                        <setting
                            help="Automatic SMS sent after the customer has registered the guarantee."
                        >
                            <field
                                name="guarantee_registers_sms_brand_name_id"
                                class="oe_inline"
                            />
                            <div invisible="not guarantee_registers_sms_brand_name_id">
                                <button
                                    type="action"
                                    name="%(crm.crm_recurring_plan_action)d"
                                    string="Manage Recurring Plans"
                                    icon="oi-arrow-right"
                                    class="oe_link"
                                />
                            </div>
                        </setting>

                        <setting
                            id="guarantee_registers_sms_brand_name_id"
                            title="SMS Brandname"
                            help="Automatic SMS sent after the customer has registered the guarantee."
                        >
                            <field name="guarantee_registers_sms_brand_name_id" />
                            <div invisible="not guarantee_registers_sms_brand_name_id">
                                <button
                                    type="action"
                                    name="%(crm.crm_recurring_plan_action)d"
                                    string="Manage Recurring Plans"
                                    icon="oi-arrow-right"
                                    class="oe_link"
                                />
                            </div>
                        </setting>
                    </block>
