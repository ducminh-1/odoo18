<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_filter_extended" model="ir.ui.view">
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_search" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@expand='1']/filter[@name='country_id']"
                position="after"
            >
                <filter
                    name="group_team_id"
                    string="Purchase Team"
                    context="{'group_by': 'team_id'}"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_order_pivot">
        <field name="name">product.month.pivot</field>
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_pivot" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_id']" position="attributes">
                <attribute name="type">measure</attribute>
            </xpath>
        </field>
    </record>
</odoo>
