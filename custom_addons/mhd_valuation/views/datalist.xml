<?xml version="1.0" encoding="utf-8"?>
<odoo>
    # ----------------------------------------
    # Form view
    # ----------------------------------------

    <record id="view_mhd_datalist_form" model="ir.ui.view">
        <field name="name">mhd.datalist.form</field>
        <field name="model">mhd.datalist</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_mail" string="Gửi Email" type="object" class="btn-primary"/>

                </header>
                <sheet>
                    <div class="oe_title pr-0">
                        <h3 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Tên tài sản..."/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="mucdichthamdinh"/>
                            <field name="phuongphapthamdinh"/>
                        </group>
                        <group>
                            <field name="kinhdoanh"/>
                            <field name="nhanvien"/>
                            <field name="thamdinhvien"/>
                            <field name="quanly"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="MÃ HỒ SƠ">
                            <group>
                                <group>
                                    <field name="chungthu_id"/>
                                    <field name="chungthu_date"/>
                                    <field name="ghichu_chungthu"/>
                                </group>
                                <group>
                                    <field name="hopdong_id"/>
                                    <field name="hopdong_date"/>
                                    <field name="ghichu_hopdong"/>
                                </group>
                            </group>

                        </page>
                        <page string="KHÁCH HÀNG" name="khach_hang">
                            <span colspan="4"><b>KHÁCH HÀNG</b></span>
                            <separator style="border-top: 1px solid #ddd; margin: 0px 0; height: 1px;" colspan="4"/>
                            <group>
                                <group>
                                    <field name="khachhang_type" placeholder="Chọn kiểu khách hàng"/>
                                    <field name="khachhang_id"/>
                                    <field name="khachhang_cmnd" attrs="{'invisible': [('khachhang_type', '!=', 'ca_nhan')]}"/>
                                    <field name="khachhang_cmnd_ngaycap" attrs="{'invisible': [('khachhang_type', '!=', 'ca_nhan')]}"/>
                                    <field name="khachhang_cmnd_noicap" attrs="{'invisible': [('khachhang_type', '!=', 'ca_nhan')]}"/>
                                    <field name="khachhang_vat" attrs="{'invisible': ['|', ('khachhang_type', '=', 'ca_nhan'), ('khachhang_type', '=', False)]}"/>
                                    <field name="khachhang_daidien" attrs="{'invisible': ['|', ('khachhang_type', '=', 'ca_nhan'), ('khachhang_type', '=', False)]}"/>
                                    <field name="khachhang_daidien_chucvu" attrs="{'invisible': ['|', ('khachhang_type', '=', 'ca_nhan'), ('khachhang_type', '=', False)]}"/>
                                </group>
                                <group>
<!--                                    <field name="khachhang_diachi"/>-->
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <b>Địa chỉ</b>
                                    </span>
                                    <div class="o_address_format">
                                        <t><field name="khachhang_diachi_street"/><t attrs="{'invisible': [('khachhang_diachi_street', '=', False)]}">, </t></t>
                                        <t><field name="khachhang_diachi_street2"/><t attrs="{'invisible': [('khachhang_diachi_street2', '=', False)]}">, </t></t>
                                        <t><field name="khachhang_diachi_city"/><t attrs="{'invisible': [('khachhang_diachi_city', '=', False)]}">, </t></t>
                                        <t><field name="khachhang_diachi_state_id"/><t attrs="{'invisible': [('khachhang_diachi_state_id', '=', False)]}">, </t><field name="khachhang_diachi_country_id"/></t>
                                    </div>
                                    <field name="khachhang_phone"/>
                                    <field name="khachhang_email"/>
                                     <field name="ghichu_hoadon_tinhtrang"/>
                                </group>
                            </group>
                            <span colspan="4"><b>BÊN GIỚI THIỆU</b></span>
                            <separator style="border-top: 1px solid #ddd; margin: 0px 0; height: 1px;" colspan="4"/>
                            <group>
                                <group>
                                    <field name="doitac_id"/>
                                    <field name="doitac_phone"/>
                                    <field name="doitac_email"/>
                                    <field name="doitac_relative_partner_id"/>
                                    <field name="doitac_relative_partner_id_email"/>

                                </group>
                                <group>
                                    <field name="doitac_groups"/>
                                    <field name="doitac_name"/>
                                    <field name="doitac_area"/>
                                    <field name="doitac_relative"/>
                                </group>
                            </group>
                        </page>
                        <page string="GIÁ TRỊ TÀI SẢN" name="property">
                            <group>
                                <group>
                                    <strong>THÔNG TIN ĐẶC ĐIỂM CHUNG</strong>
                                    <field name="loaitaisan"/>
                                    <field name="motataisan"/>
                                    <field name="loaibatdongsan"/>
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <b attrs="{'invisible': [('loaibatdongsan', '=', False)]}">Địa chỉ</b>
                                    </span>
                                    <div class="o_address_format" attrs="{'invisible': [('loaibatdongsan', '=', False)]}">
                                        <div class="o_row" attrs="{'invisible': [('loaibatdongsan', '=', False)]}">
                                            <field name="vitri_chungcu_macan" placeholder="Mã căn hộ" attrs="{'invisible': [('loaibatdongsan', '!=', 'can_ho')]}"/>
                                            <field name="vitri_chungcu_block" placeholder="Block - Tầng" attrs="{'invisible': [('loaibatdongsan', '!=', 'can_ho')]}"/>
                                        </div>
                                        <field name="vitri_chungcu" placeholder="Tên chung cư" attrs="{'invisible': [('loaibatdongsan', '!=', 'can_ho')]}"/>
                                        <field name="vitri_sonha" class="o_address_street" placeholder="Số nhà/ Thửa đất, tờ bản đồ" attrs="{'invisible': [('loaibatdongsan', '=', 'can_ho')]}"/>
                                        <field name="vitri_duong" class="o_address_street" placeholder="Tên đường" domain="[('vitri_quan', '=?', vitri_quan)]" attrs="{'invisible': [('loaibatdongsan', '=', 'can_ho')]}"/>
                                        <div class="o_row" attrs="{'invisible': [('loaibatdongsan', '=', False)]}">
                                            <field name="vitri_phuong" placeholder="Phường" domain="[('vitri_quan', '=?', vitri_quan)]"/>
                                            <field name="vitri_quan" placeholder="Quận/ huyện"  domain="[('vitri_tinh', '=?', vitri_tinh)]"/>
                                        </div>
                                        <field name="vitri_tinh" class="o_address_country" placeholder="Tỉnh/ TP" />
                                    </div>
                                </group>
                                <group>
                                    <b>THÔNG TIN ĐẶC ĐIỂM VỊ TRÍ</b>
                                    <field name="phaply_taisan"/>
                                    <field name="dacdiem_vitri_bds" attrs="{'invisible': [('loaibatdongsan', '=', 'can_ho')]}"/>
                                    <field name="dacdiem_vitri_canho" attrs="{'invisible': [('loaibatdongsan', '!=', 'can_ho')]}"/>
                                    <field name="dacdiem_ketcauduong" attrs="{'invisible': [('loaibatdongsan', '=', 'can_ho')]}"/>
                                    <field name="dacdiem_dorongduong" placeholder="VD: 2m" attrs="{'invisible': [('loaibatdongsan', '=', 'can_ho')]}"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <b>THÔNG TIN GIÁ TRỊ QSD ĐẤT</b>
                                    <field name="dat_loaidat"/>
                                    <field name="dat_dientich"/>
                                    <field name="dat_dongia"/>
                                    <field name="dat_giatri_chinh"/>
                                    <field name="dat_giatri_khac"/>
                                    <field name="dat_giatri_total" style="font-weight:700;"/>
                                </group>
                                <group>
                                    <b>THÔNG TIN GIÁ TRỊ CTXD</b>
                                    <field name="ctxd_loaicongtrinh"/>
                                    <field name="ctxd_dientich"/>
                                    <field name="ctxd_dongia"/>
                                    <field name="ctxd_clcl" widget="percentage"/>
                                    <field name="ctxd_giatri_chinh"/>
                                    <field name="ctxd_giatri_khac"/>
                                    <field name="ctxd_giatri_total" style="font-weight:700;"/>
                                    <field name="total_tstd" style="font-weight:900;"/>
                                </group>
                            </group>
                        </page>
                        <page string="THANH TOÁN" name="thanh_toan">
                            <group>
                                <group>
                                    <field name="thanhtoan_tongphi"/>
                                    <field name="thanhtoan_phidichuyen"/>
                                    <field name="thanhtoan_vat"/>
                                </group>
                                <group>
                                    <field name="thanhtoan_chuathanhtoan"/>
                                    <field name="thanhtoan_dathanhtoan"/>
                                    <field name="thanhtoan_thoidiem"/>
                                    <field name="full_phi"/>
                                </group>
                            </group>
                            <field name="thanhtoan_line">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="sotien"/>
                                    <field name="nhanvien_tao"/>
                                    <field name="lanthanhtoan"/>
                                    <field name="hinhthuc"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="note" nolabel="1" placeholder="Lưu ý khác nếu có..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <field name="thanhtoan_dathanhtoan"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="thanhtoan_dathanhtoan"/>
                                    </div>
                                    <field name="thanhtoan_dathanhtoan" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                        <page string="GHI CHÚ" name="ghichu">
                            <group>
                                <group>
                                    <field name="ghichu_hopdong"/>
                                    <field name="ghichu_mabill"/>
                                    <field name="ghichu_hoadon"/>
                                    <field name="ghichu_khac"/>
                                    <field name="luutru"/>
                                </group>
                                <group>
                                    <field name="ghichu_chungthu"/>
                                    <field name="ghichu_mabill_ngay"/>
                                    <field name="ghichu_hoadon_ngay"/>
                                    <field name="ghichu_congno"/>
                                    <field name="chiphithang"/>
                                    <field name="ghichu_ketoan"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <sheet>
                    <notebook>
                        <page string="PHỤ CẤP" name="phucap">
                            <span colspan="4"><b>BÊN GIỚI THIỆU</b></span>
                            <separator style="border-top: 1px solid #ddd; margin: 0px 0; height: 1px;" colspan="4"/>
                            <group>
                                <group>
                                    <field name="hoahong_tienke" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="hoahong_tyle" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                </group>
                                <group>
                                    <field name="hoahong_thanhtien"/>
                                    <field name="hoahong_tinhtrang"/>
                                    <field name="ghichu_hoahong"/>
                                </group>
                            </group>
                            <span colspan="4"><b>NỘI BỘ</b></span>
                            <separator style="border-top: 1px solid #ddd; margin: 0px 0; height: 1px;" colspan="4"/>
                            <group>
                                <group>
                                    <field name="tyle_hoahongnoibo" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="tyle_kinhdoanh" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="tyle_nhanvien" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="tyle_thamdinhvien" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="tyle_quanly" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="tyle_backoffice" widget="percentage" groups="mhd_valuation.nhan_vien_ke_toan"/>
                                    <field name="tinhtrang_phucap"/>
                                </group>
                                <group>
                                    <field name="sotien_hoahongnoibo"/>
                                    <field name="sotien_kinhdoanh"/>
                                    <field name="sotien_khuvuc"/>
                                    <field name="sotien_nhanvien"/>
                                    <field name="sotien_thamdinhvien"/>
                                    <field name="sotien_quanly"/>
                                    <field name="sotien_backoffice"/>
                                </group>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    # ----------------------------------------
    # Search view
    # ----------------------------------------
    <record id="view_datalist_search" model="ir.ui.view">
        <field name="name">mhd.datalist.search</field>
        <field name="model">mhd.datalist</field>
        <field name="arch" type="xml">
            <search string="Datalist">
                <field name="name" filter_domain="['|', '|', ('name', 'ilike', self), ('chungthu_id', 'ilike', self), ('vitri_duong', 'ilike', self)]"/>
                <field name="chungthu_id"/>
                <field name="vitri_duong"/>
                <field name="vitri_quan"/>
                <filter string="Nhà phố" name="nha_pho" domain="[('loaibatdongsan', '=', 'nha_pho')]"/>
                <filter string="Căn hộ" name="can_ho" domain="[('loaibatdongsan', '=', 'can_ho')]"/>
                <filter string="Đất trống" name="dat_trong" domain="[('loaibatdongsan', '=', 'dat_trong')]"/>
                <separator/>
                <filter string="Hồ sơ phát hành trong ngày" name="ho_so_trong_ngay"
                    domain="[('chungthu_date', '>=', context_today().strftime('%Y-%m-%d'))]"
                    help="Hiển thị tất cả hồ sơ tạo trong ngày hôm nay"/>
                <filter string="Hồ sơ phát hành trong tháng" name="ho_so_trong_thang" domain="[('chungthu_date','&gt;=',context_today().strftime('%%Y-%%m-01')),('chungthu_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <filter string="Hồ sơ phát hành trong năm" name="ho_so_trong_nam" domain="[('chungthu_date','&gt;=',context_today().strftime('%%Y-01-01')),('chungthu_date','&lt;',(context_today()+relativedelta(months=12)).strftime('%%Y-01-01'))]"/>
                <filter string="Hồ sơ tuần trước" invisible="1" name="week" domain="[('chungthu_date','&gt;', (context_today() - datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                <filter string="Hồ sơ tháng trước" invisible="1" name="month" domain="[('chungthu_date','&gt;', (context_today() - datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))]"/>
                <filter string="Hồ sơ năm trước" invisible="1"  name="year" domain="[('chungthu_date','&gt;', (context_today() - datetime.timedelta(days=365)).strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter string="Hồ sơ gửi trong tháng" name="ho_so_gui_trong_thang" domain="[('ghichu_mabill_ngay','&gt;=',context_today().strftime('%%Y-%%m-01')),('ghichu_mabill_ngay','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter string="Đã thu full phí" name="thu_full" domain="[('full_phi', '=', True)]"/>
                <filter string="Đã hủy" name="da_huy" domain="[('ghichu_hopdong', '=', 'huy')]"/>
                <separator/>
                <filter string="Hồ sơ tôi thực hiện" name="ho_so_cua_toi" domain="[('nhanvien', '=', uid)]"/>
                <filter string="Hồ sơ tôi kiểm soát" name="ho_so_cua_toi" domain="[('thamdinhvien', '=', uid)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="doitac_groups" string="Nhóm khách hàng" context="{'group_by' : 'doitac_groups'}"/>
                    <filter name="doitac_area" string="Trụ sở/ Chi nhánh" context="{'group_by' : 'doitac_area'}"/>
                    <filter name="doitac_id" string="Tên tín dụng/ Đối tác" context="{'group_by' : 'doitac_id'}"/>
                    <separator/>
                    <filter name="nhanvien" string="Nhân viên thực hiện" context="{'group_by' : 'nhanvien'}"/>
                    <filter name="thamdinhvien" string="Kiểm soát viên" context="{'group_by' : 'thamdinhvien'}"/>
                    <filter name="quanly" string="Quản lý" context="{'group_by' : 'quanly'}"/>
                    <separator/>
                    <filter name="thanhtoan_thoidiem" string="Thời điểm thanh toán" context="{'group_by' : 'thanhtoan_thoidiem'}"/>
                    <filter name="ghichu_chungthu" string="Tình trạng chứng thư" context="{'group_by' : 'ghichu_chungthu'}"/>
                    <filter name="ghichu_hopdong" string="Tình trạng hợp đồng" context="{'group_by' : 'ghichu_hopdong'}"/>
                </group>

            </search>
        </field>
    </record>

