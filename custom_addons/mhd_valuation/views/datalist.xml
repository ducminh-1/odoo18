    <record id="action_mhd_datalist" model="ir.actions.act_window">
        <field name="name">Data List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mhd.datalist</field>
        <field name="view_mode">tree,kanban,form,graph,pivot</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mhd_datalist_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mhd_valuation.view_mhd_datalist_form')})]"/>
        <field name="context">{}</field>
<!--        <field name="context">{'search_default_responsible_id': 1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo hồ sơ đầu tiên!
            </p>
        </field>
    </record>

    <record id="action_mhd_vitri_duong" model="ir.actions.act_window">
        <field name="name">Tên đường</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mhd.vitri.duong</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
<!--        <field name="context">{'search_default_responsible_id': 1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo tuyến đường!
            </p>
        </field>
    </record>


    <menuitem id="menu_mhd_valuation_root"
              name="MHD Valuation"
              sequence="10" web_icon="mhd_valuation,static/description/icon.png"/>

    <menuitem id="menu_datalist"
              name="Data List"
              parent="menu_mhd_valuation_root"
              action="action_mhd_datalist"
              sequence="10"/>

    <menuitem id="menu_setting"
              name="Cấu hình"
              parent="menu_mhd_valuation_root"
              sequence="10"/>
    <menuitem id="menu_setting_vitri"
              name="Vị trí"
              parent="menu_setting"
              sequence="10"/>
    <menuitem id="menu_setting_vitri_duong"
              name="Tên đường"
              parent="menu_setting_vitri"
              action="action_mhd_vitri_duong"
              sequence="10"/>


