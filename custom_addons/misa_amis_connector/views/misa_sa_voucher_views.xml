<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="misa_sa_voucher_search" model="ir.ui.view">
        <field name="name">misa.sa.voucher.search</field>
        <field name="model">misa.sa_voucher</field>
        <field name="arch" type="xml">
            <search />
        </field>
    </record>

    <record id="misa_sa_voucher_list" model="ir.ui.view">
        <field name="name">misa.sa.voucher.list</field>
        <field name="model">misa.sa_voucher</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name = "action_post_all"
                            string = "Post all to Misa"
                            type = "object"
                            display = "always"/>
                </header>
                <field name="state" />
                <field name="refno_finance" />
                <field name="partner_id" />
                <field name="posted_date" />
                <field name="refdate" />
                <field name="account_object_code" />
                <field name="account_object_name" />
            </list>
        </field>
    </record>

    <record id="misa_sa_voucher_form" model="ir.ui.view">
        <field name="name">misa.sa.voucher.form</field>
        <field name="model">misa.sa_voucher</field>
        <field name="arch" type="xml">
            <form string="MISA SA Voucher">
                <header>
                    <button
                        name="action_post"
                        type="object"
                        string="Post"
                        class="oe_highlight"
                        invisible="state != 'draft'"
                    />
                    <!--<button name="action_cancel" type="object" string="Cancel" class="oe_link" states="posted"/>-->
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,posted,cancelled"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div name="options">
                        <span class="d-inline-flex">
                            <field name="is_sale_with_outward" />
                            <label for="is_sale_with_outward" />
                            <field name="include_invoice" />
                            <label for="include_invoice" />
                        </span>
                    </div>
                    <notebook>
                        <page string="Phiếu thu">
                            <group>
                                <group>
                                    <field name="partner_id" />
                                    <field name="account_object_code" />
                                    <field name="account_object_name" />
                                    <field name="account_object_tax_code" />
                                    <field name="account_object_address" />
                                    <field name="misa_app_id" options="{'no_create': True}" />
                                    <field name="misa_branch_id" options="{'no_create': True}" />
                                </group>
                                <group>
                                    <field name="reftype" />
                                    <field name="posted_date" />
                                    <field name="refdate" />
                                    <field name="refno_finance" />
                                    <field name="org_refid" />
                                    <field name="org_refno" string="Số chứng từ gốc" />
                                    <field
                                        name="org_reftype_name"
                                        string="Loại chứng từ gốc"
                                    />
                                </group>
                            </group>
                        </page>
                        <page string="Phiếu xuất" invisible="not is_sale_with_outward">
                            <group>
                                <group>
                                    <field name="in_outward_account_object_code" />
                                    <field name="in_outward_account_object_name" />
                                    <field name="in_outward_account_object_tax_code" />
                                    <field name="in_outward_account_object_address" />
                                </group>
                                <group>
                                    <field name="in_outward_in_reforder" />
                                    <field name="in_outward_posted_date" />
                                    <field name="in_outward_refdate" />
                                    <!--<field name="in_outward_reftype" />-->
                                    <field name="in_outward_refno_finance" />
                                </group>
                            </group>
                        </page>
                        <page string="Hóa đơn" invisible="include_invoice != '1'">
                            <group>
                                <group>
                                    <field name="invoice_account_object_code" />
                                    <field name="invoice_account_object_name" />
                                    <field name="invoice_account_object_tax_code" />
                                    <field name="invoice_account_object_address" />
                                    <field name="invoice_buyer_id"/>
                                </group>
                                <group>
                                    <field name="invoice_inv_date" />
                                    <field name="invoice_inv_no" />
                                    <field name="invoice_inv_series" />
                                    <field name="invoice_inv_template_no" />
                                    <field name="invoice_refno_finance" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="voucher_line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="product_id" />
                            <field name="inventory_item_code" force_save="1" />
                            <field name="description" force_save="1" />
                            <field name="stock_code" force_save="1" />
                            <field name="debit_account" force_save="1" />
                            <field name="credit_account" force_save="1" />
                            <field name="unit_name" force_save="1" />
                            <field
                                name="main_unit_name"
                                force_save="1"
                                column_invisible="1"
                            />
                            <field name="quantity" />
                            <!--<field name="main_quantity" />-->
                            <field name="unit_price" />
                            <!--<field name="main_unit_price" />-->
                            <field name="amount" />
                            <field name="vat_rate" />
                            <field name="vat_amount" />
                        </list>
                    </field>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="misa_sa_voucher_action" model="ir.actions.act_window">
        <field name="name">MISA SA Vouchers</field>
        <field name="res_model">misa.sa_voucher</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="misa_sa_voucher_search" />
    </record>

</odoo>
