<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_salary_type_view_form" model="ir.ui.view">
        <field name="name">hr.salary.type.form</field>
        <field name="model">hr.salary.type</field>
        <field name="arch" type="xml">
            <form string="Salary Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_salary_type_view_tree" model="ir.ui.view">
        <field name="name">hr.salary.type.tree</field>
        <field name="model">hr.salary.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="hr_salary_type_action" model="ir.actions.act_window">
        <field name="name">Salary Type</field>
        <field name="res_model">hr.salary.type</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem
        id="hr_salary_type_menu"
        name="Salary Type"
        action="hr_salary_type_action"
        parent="hr_contract.menu_human_resources_configuration_contract"
        sequence="21"
        groups="hr.group_hr_user"
    />
</odoo>
