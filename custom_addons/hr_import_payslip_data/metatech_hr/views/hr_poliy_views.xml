<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_policy_view_form" model="ir.ui.view">
        <field name="name">hr.policy.form</field>
        <field name="model">hr.policy</field>
        <field name="arch" type="xml">
            <form string="Policy">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_policy_view_tree" model="ir.ui.view">
        <field name="name">hr.policy.tree</field>
        <field name="model">hr.policy</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="hr_policy_action" model="ir.actions.act_window">
        <field name="name">Policy</field>
        <field name="res_model">hr.policy</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem
        id="hr_policy_menu"
        name="Policy"
        action="hr_policy_action"
        parent="hr_contract.menu_human_resources_configuration_contract"
        sequence="20"
        groups="hr.group_hr_user"
    />
</odoo>
