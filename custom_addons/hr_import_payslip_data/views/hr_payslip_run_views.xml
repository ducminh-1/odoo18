<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_payslip_run_form_inherit_import" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll_community.hr_payslip_run_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//header[1]" position="inside">
                <button
                    name="%(action_import_payslip)d"
                    string="Import Payslip Data"
                    type="action"
                    class="oe_highlight"
                    invisible="state != 'draft'"
                    groups="hr_payroll_community.group_hr_payroll_community_manager"
                />
            </xpath>
            <xpath expr="//sheet[1]/group[1]" position="inside">
                <field name="imported" />
                <field name="last_import_date" invisible="last_import_date == False" />
            </xpath>
        </field>
    </record>
</odoo>
