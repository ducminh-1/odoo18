<?xml version="1.0" encoding="utf-8"?>
<odoo>

    # ----------------------------------------
    # Form view
    # ----------------------------------------

    <record id="view_mhd_data_old_form" model="ir.ui.view">
        <field name="name">mhd.data.old.form</field>
        <field name="model">mhd.data.old</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title pr-0">
                        <h3 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Địa chỉ tài sản"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="tenduong"/>
                            <field name="tenphuong"/>
                            <field name="tenquan"/>
                            <field name="vitri"/>
                            <field name="huong"/>
                            <field name="hinhdang"/>
                            <field name="dientichdat"/>

                        </group>
                        <group>
                            <field name="thoidiemthamdinh"/>
                            <field name="giatridat"/>
                            <field name="dongiadat"/>
                            <field name="sochungthu"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="geolocalize" string="Google Maps">
                            <group colspan="2" col="2">
                                <div>
                                    <span class="oe_inline"> ( </span>
                                    <span> Vĩ độ : </span>
                                    <field name="customer_latitude" class="oe_inline" no_label="1"/>
                                    <span> : Kinh độ : </span>
                                    <field name="customer_longitude" class="oe_inline" nolabel="1"/>
                                    <span>) </span><br/>
                                </div>
                            </group>
                            <widget name="gmap_marker" lat="customer_latitude" lng="customer_longitude"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    # ----------------------------------------
    # Tree view
    # ----------------------------------------

    <record id="mhd_data_old_tree_view" model="ir.ui.view">
            <field name="name">mhd.data.old.tree.view</field>
            <field name="model">mhd.data.old</field>
            <field name="arch" type="xml">
                <tree string="Data" create="1" multi_edit="1">
                    <field name="name" optional="show"/>
                    <field name="vitri" optional="show"/>
                    <field name="huong" optional="hide"/>
                    <field name="hinhdang" optional="hide"/>
                    <field name="dientichdat" optional="show"/>
                    <field name="giatridat" optional="hide"/>
                    <field name="dongiadat" optional="show"/>
                    <field name="thoidiemthamdinh" optional="hide"/>
                    <field name="sochungthu" optional="show"/>
                    <field name="customer_longitude" optional="show"/>
                    <field name="customer_latitude" optional="show"/>
                </tree>
            </field>
    </record>
    # ----------------------------------------
    # Search view
    # ----------------------------------------
    <record id="view_mhd_data_old_search" model="ir.ui.view">
        <field name="name">mhd.data.old.search</field>
        <field name="model">mhd.data.old</field>
        <field name="arch" type="xml">
            <search string="Data">
                <field name="name" filter_domain="['|', '|', '|', ('name', 'ilike', self), ('tenduong', 'ilike', self), ('tenphuong', 'ilike', self), ('tenquan', 'ilike', self)]"/>
                <filter string="Năm 2021" name="nam_2021" domain="[('thoidiemthamdinh', '=', '2021')]"/>
                <filter string="Năm 2020" name="nam_2020" domain="[('thoidiemthamdinh', '=', '2020')]"/>
                <filter string="Năm 2019" name="nam_2019" domain="[('thoidiemthamdinh', '=', '2019')]"/>
                <filter string="Năm 2018" name="nam_2018" domain="[('thoidiemthamdinh', '=', '2018')]"/>
                <filter string="Năm 2017" name="nam_2017" domain="[('thoidiemthamdinh', '=', '2017')]"/>
                <filter string="Năm 2016" name="nam_2016" domain="[('thoidiemthamdinh', '=', '2016')]"/>
            </search>
        </field>
    </record>
    # ----------------------------------------
    # Google view
    # ----------------------------------------

    <record id="view_mhd_data_old_google_map" model="ir.ui.view">
        <field name="name">view.mhd.data.old.google_map</field>
        <field name="model">mhd.data.old</field>
        <field name="arch" type="xml">
            <google_map string="Maps" lat="customer_latitude" lng="customer_longitude" color="orange" sidebar_title="name" sidebar_subtitle="thoidiemthamdinh" limit="7000">
                <field name="customer_latitude"/>
                <field name="customer_longitude"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content">
                            <div>
                                <strong class="o_kanban_record_title"><span>Đơn giá: <field name="dongiadat"/> tr/m2 - Diện tích: <field name="dientichdat"/> m2</span></strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle"><field name="name"/></span>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">Vị trí: <field name="vitri"/> - Hướng: <field name="huong"/> - Hình dáng: <field name="hinhdang"/></span>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">Thời điểm thẩm định: <field name="thoidiemthamdinh"/></span>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">Số chứng thư: <field name="sochungthu"/>/<field name="thoidiemthamdinh"/>/CT-MHD</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </google_map>
        </field>
    </record>
    <record id="action_mhd_data_old_map" model="ir.actions.act_window">
        <field name="name">Google Map</field>
        <field name="res_model">mhd.data.old</field>
        <field name="view_mode">google_map</field>
        <field name="view_id" ref="view_mhd_data_old_google_map"/>
<!--        <field name="domain">[('id', '=', active_id)]</field>-->
    </record>
    # ----------------------------------------
    # Menu
    # ----------------------------------------
    <record id="action_mhd_data_old" model="ir.actions.act_window">
        <field name="name">Data Old</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mhd.data.old</field>
        <field name="view_mode">tree,form,google_map</field>
        <field name="context">{'search_default_nam_2021' : '2021', 'search_default_nam_2020' : '2020', 'search_default_nam_2019' : '2019'}</field>
<!--        <field name="context">{}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo hồ sơ đầu tiên!
            </p>
        </field>
    </record>

    <menuitem id="menu_data_old"
              name="Data 2016 - 2021"
              parent="mhd_valuation.menu_mhd_valuation_root"
              action="action_mhd_data_old"
              sequence="10"/>

</odoo>