<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_attendance_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <field name="worked_hours" position="before">
                <field name="late_hours" widget="float_time"/>
                <field name="early_hours" widget="float_time"/>
            </field>
        </field>
    </record>

    <record id="hr_attendance_view_pivot" model="ir.ui.view">
        <field name="name">hr.attendance.pivot</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_pivot"/>
        <field name="arch" type="xml">
            <field name="worked_hours" position="after">
                  <field name="late_hours" type="measure" widget="float_time"/>
                  <field name="early_hours" type="measure" widget="float_time"/>
            </field>
        </field>
    </record>

    <record id="view_attendance_tree_management" model="ir.ui.view">
        <field name="name">hr.attendance.list</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree_management"/>
        <field name="arch" type="xml">
            <field name="worked_hours" position="after">
                  <field name="late_hours" widget="float_time"/>
                  <field name="early_hours" widget="float_time"/>
            </field>
        </field>
    </record>

    <record id="view_attendance_tree" model="ir.ui.view">
        <field name="name">hr.attendance.list</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="worked_hours" position="after">
                  <field name="late_hours" widget="float_time"/>
                  <field name="early_hours" widget="float_time"/>
            </field>
        </field>
    </record>

</odoo>
