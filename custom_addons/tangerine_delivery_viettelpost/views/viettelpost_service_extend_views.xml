<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="viettelpost_service_extend_tree_view" model="ir.ui.view">
        <field name="name">viettelpost.service.extend.list.view</field>
        <field name="model">viettelpost.service.extend</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="service_id"/>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="viettelpost_service_extend_search_view" model="ir.ui.view">
        <field name="name">viettelpost.service.extend.search.view</field>
        <field name="model">viettelpost.service.extend</field>
        <field name="arch" type="xml">
            <search>
                <field name="service_id"/>
                <field name="name"/>
                <field name="code"/>
           </search>
        </field>
    </record>

    <record id="viettelpost_service_extend_action" model="ir.actions.act_window">
        <field name="name">Service Extend</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">viettelpost.service.extend</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('viettelpost_service_extend_tree_view')})]"
        />
        <field name="search_view_id" ref="viettelpost_service_extend_search_view"/>
    </record>
</odoo>
