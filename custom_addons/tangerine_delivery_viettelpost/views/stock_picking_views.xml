<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form_inherit_delivery_viettelpost" model="ir.ui.view">
        <field name="name">view.picking.withcarrier.out.form.inherit.delivery.viettelpost</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_picking_withcarrier_out_form_inherit_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='external_delivery_data']" position="before">
                <group name='delivery_viettelpost_data'
                       invisible="carrier_tracking_ref or not is_locally_delivery or delivery_type != 'viettelpost'"
                       string="Viettel Post Shipping Information"
                >
                    <label for="cash_on_delivery" name="o_label_cash_on_delivery"/>
                    <div class="o_row" name="o_div_cash_on_delivery">
                        <field name="cash_on_delivery" style="max-width: 15%;" widget="boolean_toggle" readonly="carrier_tracking_ref"/>
                        <field name="cash_on_delivery_amount" readonly="carrier_tracking_ref" invisible="not cash_on_delivery"/>
                    </div>
                    <field name="viettelpost_order_payment"
                           required="delivery_type == 'viettelpost'"
                    />
                    <field name="viettelpost_product_type"
                           required="delivery_type == 'viettelpost'"
                    />
                    <field name="viettelpost_national_type"
                           required="delivery_type == 'viettelpost'"
                    />
                    <field name="viettelpost_service_id"
                           required="delivery_type == 'viettelpost'"
                           domain="viettelpost_service_request_domain"
                    />
                    <field name="viettelpost_service_extend_id"/>
                    <field name="viettelpost_service_request_domain" invisible="1"/>
                    <field name="promo_code" readonly="carrier_tracking_ref"/>
                    <field name="remarks"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>