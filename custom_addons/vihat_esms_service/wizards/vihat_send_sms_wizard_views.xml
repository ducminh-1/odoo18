<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="send_sms_wizard_form" model="ir.ui.view">
        <field name="name">vihat.send.sms.wizard.form</field>
        <field name="model">vihat.send.sms.wizard</field>
        <field name="arch" type="xml">
            <form string="Send SMS Wizard">
                <sheet>
                    <group>
                        <field
                            name="partner_id"
                            required="1"
                            options="{'no_create': True, 'no_create_edit': True}"
                        />
                        <field
                            name="sms_brandname_id"
                            required="1"
                            options="{'no_create': True, 'no_create_edit': True}"
                        />
                        <field name="zalo_oa_id" invisible="1" />
                        <field
                            name="zns_template_id"
                            required="1"
                            placeholder="Tìm kiếm với từ khóa 'ZNS Template: '"
                            domain="[('type','=','qweb'),('name', 'ilike', 'ZNS Template: '),('zalo_oa_id','=',zalo_oa_id)]"
                            options="{'no_create': True, 'no_create_edit': True}"
                        />
                        <field
                            name="template_id"
                            required="1"
                            placeholder="Tìm kiếm với từ khóa 'SMS Template: '"
                            domain="[('type','=','qweb'),('name', 'ilike', 'SMS Template: ')]"
                            options="{'no_create': True, 'no_create_edit': True}"
                        />
                        <field name="body_sms" required="1" />
                    </group>
                </sheet>
                <footer>
                    <button
                        string="Send"
                        name="send_vihat_sms"
                        type="object"
                        default_focus="1"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_send_sms_wizard" model="ir.actions.act_window">
        <field name="name">Send SMS Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vihat.send.sms.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="send_sms_wizard_form" />
        <field name="target">new</field>
    </record>
</odoo>
