<odoo>
    <record model="ir.ui.view" id="sms_brandname_tree_view">
        <field name="name">sms.brandname.tree</field>
        <field name="model">sms.brandname</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name" />
                <field name='zalo_oa_id' />
                <field name="create_date" />
            </list>
        </field>
    </record>

    <record id="sms_brandname_view_form" model="ir.ui.view">
        <field name="name">sms.brandname.view.form</field>
        <field name="model">sms.brandname</field>
        <field name="arch" type="xml">
            <form string="SMS Brandname">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" />
                        </div>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name='zalo_oa_id' />
                            <field name="create_date" readonly="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_open_sms_brandname">
        <field name="name">SMS Brandname</field>
        <field name="res_model">sms.brandname</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem
        id="sms_brandname_menu"
        parent="phone_validation.phone_menu_main"
        action="action_open_sms_brandname"
        name="SMS Brandname"
        sequence="10"
    />
</odoo>
