<odoo>
    <record id="sms_view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.sms.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position='after'>
                <button
                    name="%(vihat_esms_service.action_send_sms_wizard)d"
                    string="Send SMS"
                    type="action"
                    icon="fa-cogs"
                    class="oe_highlight"
                />
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position='after'>
                <field
                    name="brandname_id"
                    options="{'no_create': True, 'no_create_edit': True}"
                />
            </xpath>
        </field>
    </record>
</odoo>
