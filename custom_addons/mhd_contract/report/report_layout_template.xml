<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="mhd_external_layout">
        <t t-if="not o" t-set="o" t-value="doc" />

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="row">
                <div class="col-3 mb4">
                    <img
                        t-if="company.logo"
                        t-att-src="image_data_uri(company.logo)"
                        style="max-height: 60px;"
                        alt="Logo"
                    />
                </div>
                <div class="col-9 text-right">
                    <div>
                        <strong t-field="company.partner_id.display_name" />
                    </div>
                    <!-- <div>
                        <span
                            style="color: rgb(255, 126, 0);"
                            t-field="company.partner_id.partner_address"
                        />
                    </div> -->
                    <div style="color: rgb(255, 126, 0);">
                        <span>MST: </span>
                        <span t-field="company.partner_id.vat" />
                        <span> | </span>
                        <span>ĐT: </span>
                        <span t-field="company.partner_id.phone" />
                    </div>
                </div>
            </div>
            <div class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;" />
                </div>
            </div>
        </div>
        <div
            t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
            t-att-data-oe-model="o and o._name"
            t-att-data-oe-id="o and o.id"
            t-att-data-oe-lang="o and o.env.context.get('lang')"
        >
            <t t-call="web.address_layout" />
            <t t-raw="0" />
        </div>
        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <div class="row">
                    <div class="col-10 text-center">
                        <ul class="list-inline mb4">
                            <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                                 adding d-inline class fixes the problem-->
                            <li t-if="company.phone" class="list-inline-item">
                                <i
                                    class="fa fa-phone"
                                    role="img"
                                    aria-label="Phone"
                                    title="Phone"
                                />
                                <span t-field="company.phone" />
                            </li>
                            <li t-if="company.email" class="list-inline-item">
                                <i
                                    class="fa fa-at"
                                    role="img"
                                    aria-label="Email"
                                    title="Email"
                                />
                                <span t-field="company.email" />
                            </li>
                            <li t-if="company.website" class="list-inline-item">
                                <i
                                    class="fa fa-globe"
                                    role="img"
                                    aria-label="Website"
                                    title="Website"
                                />
                                <span t-field="company.website" />
                            </li>
                        </ul>
                    </div>
                    <div class="col-2 text-left">
                        <div t-if="report_type == 'pdf'">
                            Trang: <span class="page" /> / <span class="topage" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="external_layout_standard_mhd" inherit_id="web.external_layout_standard">

        <xpath expr="//div[contains(@t-attf-class, 'header')]" position="before">
            <div class="o_header" style="width:100%; margin-bottom:20px;">
                    <table class="table-borderless" style="width:100%; border-collapse:collapse;">
                        <tr>
                            <td style="width: 8rem;">
                                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"
                                            style="max-width: 8rem; height: auto;" alt="Company Logo"/>
                                    </td>
                            <td style="text-align:center; vertical-align:middle;">   
                                <p style="text-align:left;">
                                    CÔNG TY TNHH THẨM ĐỊNH GIÁ MHD<br/>
                                    MST: 0312231570<br/>
                                    52 Trần Bình Trọng, Phường 5, Quận Bình Thạnh, Tp.HCM
                                </p>
                            </td>

                            <td style="width:25%;"></td>
                        </tr>
                    </table>
                </div> 
        </xpath>
    </template>

</odoo>