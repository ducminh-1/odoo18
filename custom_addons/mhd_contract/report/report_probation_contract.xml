                        <tr>
                            <td style="width:50%; border:none;">
                                <strong>Người lao động</strong><br/>
                                (Ký tên)<br/><br/><br/><br/>
                                <t t-esc="doc.employee_id.name"/>
                            </td>
                            <td style="width:50%; border:none;">
                                <strong>Người sử dụng lao động</strong><br/>
                                (Ký tên, đóng dấu)<br/><br/><br/><br/>
                                <strong>Trần Khánh Du</strong>
                            </td>
                        </tr>
                    </table>
                </t>
            </div>
        </t>
    </template>   

</odoo>