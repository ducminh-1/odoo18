<?xml version="1.0" ?>
<odoo>
    <template
        id="nsv_report_repairorder_document_inherit"
        inherit_id="repair.report_repairorder"
    >
        <xpath expr="//t" position="replace">
            <t t-call="nsv_customize.nsv_sale_external_layout">
                <t t-set="o" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <div
                    class="row row mt32 mb32"
                    style="font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri; font-size: 15px;"
