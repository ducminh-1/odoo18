    <record model="ir.ui.view" id="product_product_stock_tree_inherit_stock_account">
        <field
            name="name"
        >product.product.stock.list.inherit.stock.account.inherit</field>
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="stock_account.product_product_stock_tree_inherit_stock_account"
        />
        <field name="arch" type="xml">
            <field name="avg_cost" position="before">
                <field name="default_code" />
            </field>
            <field name="avg_cost" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </field>
            <field name="total_value" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </field>
        </field>
    </record>
