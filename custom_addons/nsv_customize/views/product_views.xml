                <!--<label for="product_size" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>-->
                <!--<div class="o_row" name="product_size" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">-->
                <!--	<field name="product_size" string="Product Size"/>-->
                <!--	<span>mm</span>-->
                <!--</div>-->
                <label
                    for="product_size"
                    invisible="product_variant_count > 1 and not is_product_variant"
                />
                <div
                    class="o_row"
                    name="product_size"
                    invisible="product_variant_count > 1 and not is_product_variant"
                >
                    <field name="product_size" string="Product Size" />
                    <span>mm</span>
                </div>
            </xpath>
        </field>
    </record>

