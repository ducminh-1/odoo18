<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="nsv_product_template_form_view" model="ir.ui.view">
        <field name="name">nsv.product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <label for="standard_price" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </label>
            <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </xpath>
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <field name="product_variant_count" invisible="1" />
                <field name="is_product_variant" invisible="1" />
                <!--<label for="product_size" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>-->
                <!--<div class="o_row" name="product_size" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">-->
                <!--	<field name="product_size" string="Product Size"/>-->
                <!--	<span>mm</span>-->
                <!--</div>-->
                <!--<label for="carton_size" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>-->
                <!--<div class="o_row" name="carton_size" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">-->
                <!--	<field name="carton_size" string="Carton Size" widget="many2many_tags"/>-->
                <!--	<span>mm</span>-->
                <!--</div>-->
                <label
                    for="product_size"
                    invisible="product_variant_count > 1 and not is_product_variant"
                />
                <div
                    class="o_row"
                    name="product_size"
                    invisible="product_variant_count > 1 and not is_product_variant"
                >
                    <field name="product_size" string="Product Size" />
                    <span>mm</span>
                </div>
                <label
                    for="carton_size"
                    invisible="product_variant_count > 1 and not is_product_variant"
                />
                <div
                    class="o_row"
                    name="carton_size"
                    invisible="product_variant_count > 1 and not is_product_variant"
                >
                    <field
                        name="carton_size"
                        string="Carton Size"
                        widget="many2many_tags"
                    />
                    <span>mm</span>
                </div>
            </xpath>
            <xpath
                expr="//page[@name='general_information']/group[2]"
                position="before"
            >
                <group string="Report" name="product_report">
                    <group>
                        <field
                            name="product_report_category"
                            options="{'no_create': True}"
                        />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="common_product_template_form_brand_add_custom_view" model="ir.ui.view">
        <field name="name">nsv.product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="nsv_product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='product_report']/group" position="inside">
                <!--<field name="product_brand_id" position="move"/>-->
            </xpath>
        </field>
    </record>

    <record id="nsv_product_product_tree_view" model="ir.ui.view">
        <field name="name">nsv.product.product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </field>
        </field>
    </record>

    <record id="nsv_product_template_tree_view" model="ir.ui.view">
        <field name="name">nsv.product.template.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </field>
            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="uom_po_id" />
                <field name="create_uid" optional="hide" />
            </xpath>
            <xpath
                expr="//field[@name='activity_exception_decoration']"
                position="after"
            >
                <field name="activity_user_id" />
            </xpath>
        </field>
    </record>

    <record id="product_category_list_view_inherit" model="ir.ui.view">
        <field name="name">product.category.list</field>
        <field name="model">product.category</field>
        <field name="priority">1</field>
        <field name="inherit_id" ref="product.product_category_list_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="property_account_income_categ_id" />
                    <field name="property_account_expense_categ_id" />
                    <field name="property_stock_account_input_categ_id" />
                    <field name="property_stock_account_output_categ_id" />
                    <field name="property_stock_valuation_account_id" />
                    <field name="create_uid" optional="hide" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="nsv_view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="name">stock.quant.tree.editable</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable" />
        <field name="arch" type="xml">
            <field name="value" position="attributes">
                <attribute
                    name="groups"
                >nsv_customize.group_view_product_standard_prices</attribute>
            </field>
        </field>
    </record>

