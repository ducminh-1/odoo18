<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="nsv_stock_picking_view_form_inherit" model="ir.ui.view">
        <field name="name">nsv.stock.picking.form.view.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="backorder_id" position="after">
                <!--<field name="account_analytic_id" options="{'no_create': 1}" />-->
                <field name="account_analytic_ids" options="{'no_create': 1}" />
                <!--<field name="analytic_tag_ids" options="{'no_create': 1}" widget="many2many_tags"/>-->
            </field>
            <field name="origin" position="after">
                <!--<field name="so_id" options="{'no_create': True}" attrs="{'invisible': [('so_id', '=', False)]}"/>-->
                <!--<field name="po_id" options="{'no_create': True}" attrs="{'invisible': [('po_id', '=', False)]}"/>-->
                <!--<field name="ticket_id" readonly="1" attrs="{'invisible': [('ticket_id', '=', False)]}"/>-->
                <field
                    name="so_id"
                    options="{'no_create': True}"
                    invisible="not so_id"
                />
                <field
                    name="po_id"
                    options="{'no_create': True}"
                    invisible="not po_id"
                />
                <field name="ticket_id" readonly="1" invisible="not ticket_id" />
            </field>
            <xpath
                expr="//field[@name='move_ids_without_package']//list//field[@name='quantity']"
                position="after"
            >
                <field name="product_size" optional="hide" />
                <field name="carton_size" optional="hide" widget="many2many_tags" />
                <field name="weight" sum="Total Weight" optional="hide" />
                <field name="volume" sum="Total Volume" optional="hide" />
            </xpath>
            <xpath
                expr="//field[@name='move_ids_without_package']//list//field[@name='quantity']"
                position="attributes"
            >
                <attribute name="sum">Done</attribute>
            </xpath>
            <xpath
                expr="//field[@name='move_ids_without_package']//list//field[@name='product_uom_qty']"
                position="attributes"
            >
                <attribute name="sum">Demand</attribute>
            </xpath>
            <xpath
                expr="//field[@name='move_ids_without_package']//list//field[@name='forecast_availability']"
                position="attributes"
            >
                <attribute name="sum">Reserved</attribute>
            </xpath>
        </field>
    </record>

    <record id="nsv_stock_move_line_view_inherit" model="ir.ui.view">
        <field name="name">nsv.stock.move.line.view.inherit</field>
        <field name="model">stock.move.line</field>
        <field
            name="inherit_id"
            ref="stock.view_stock_move_line_detailed_operation_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='quantity']" position="after">
                <field name="product_size" optional="hide" />
                <field name="carton_size" optional="hide" widget="many2many_tags" />
                <field name="weight" sum="Total Weight" optional="hide" />
                <field name="volume" sum="Total Volume" optional="hide" />
            </xpath>
            <xpath expr="//list/field[@name='quantity']" position="attributes">
                <attribute name="sum">Done</attribute>
            </xpath>
            <!--<xpath expr="//list/field[@name='product_uom_qty']" position="attributes">-->
            <!--    <attribute name="sum">Reserved</attribute>-->
            <!--</xpath>-->
        </field>
    </record>

    <record id="nsv_stock_picking_list_inherit" model="ir.ui.view">
        <field name="name">nsv.stock.picking.tree.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="shipping_address" />
                </xpath>
                <xpath
                    expr="//field[@name='activity_exception_decoration']"
                    position="after"
                >
                    <field name="note" />
                </xpath>
            </data>
        </field>
    </record>
</odoo>
